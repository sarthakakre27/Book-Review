<% layout('layouts/boilerplate') %> 
    <h1>All Books!</h1>
    <div>
        <a href="/books/new">Add a Book</a>
    </div>
    <% for (let book of books){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=book.image%>" height="200px" width="300px">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= book.title %> </h5>
                        <p class="card-text"><%= book.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= book.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/books/<%=book._id%>">View <%=book.title%></a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>