<% layout('layouts/boilerplate1') %>
    <!-- add a new book form -->
    <div class="book-form">
        <div class="container">
            <div class="header1">
                <h2>New Book</h2><!-- form header -->
            </div>
            <!-- form start -->
            <form id="form" class="form" action="/books" method="POST" novalidate class="validated-form">
                <div class="form-control">
                    <!-- label and input for title -->
                    <label for="username">Title</label>
                    <input type="text" placeholder="Ex: Agatha Christie's Peril at End House" id="title"
                        name="book[title]" required />
                    <i class="fas fa-check-circle"></i><!-- tag for form validation -->
                    <i class="fas fa-exclamation-circle"></i><!-- tag for form validation -->
                    <small>Error message</small><!-- tag for form validation -->
                </div>
                <div class="form-control">
                    <!-- label and input for label -->
                    <label for="username">Author</label>
                    <input type="text" placeholder="Agatha Christie" id="author" name="book[author]" required />
                    <i class="fas fa-check-circle"></i><!-- tag for form validation -->
                    <i class="fas fa-exclamation-circle"></i><!-- tag for form validation -->
                    <small>Error message</small><!-- tag for form validation -->
                </div>
                <div class="form-control">
                    <!-- label and input for image url -->
                    <label for="username">Image Url</label>
                    <input type="text" placeholder="Paste book cover url" id="image" name="book[image]" required />
                    <i class="fas fa-check-circle"></i><!-- tag for form validation -->
                    <i class="fas fa-exclamation-circle"></i><!-- tag for form validation -->
                    <small>Error message</small><!-- tag for form validation -->
                </div>
                <div class="form-control">
                    <!-- label and input for best purchase url -->
                    <label for="username">Best-Buy Url</label>
                    <input type="text" placeholder="Recommend a site" id="image-buy" name="book[bestPurchaseLink]"
                        required />
                    <i class="fas fa-check-circle"></i><!-- tag for form validation -->
                    <i class="fas fa-exclamation-circle"></i><!-- tag for form validation -->
                    <small>Error message</small><!-- tag for form validation -->
                </div>
                <div class="form-control" id="form-price">
                    <!-- label and input for price -->
                    <label class="form-label" for="price">Book Price</label>
                    <span class="input-group-text" id="price-label">&#8377</span>
                    <input type="text" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label"
                        name="book[price]" required>
                    <i class="fas fa-check-circle"></i><!-- tag for form validation -->
                    <i class="fas fa-exclamation-circle"></i><!-- tag for form validation -->
                    <small>Error message</small><!-- tag for form validation -->
                </div>
                <div class="form-control">
                    <!-- label and input for about the book -->
                    <label class="form-label" for="price">About The Book</label>
                    <textarea class="form-control" type="text" id="description" name="book[about]" required></textarea>
                    <i class="fas fa-check-circle"></i><!-- tag for form validation -->
                    <i class="fas fa-exclamation-circle"></i><!-- tag for form validation -->
                    <small>Error message</small><!-- tag for form validation -->
                </div>
                <!-- add book submit button -->
                <button id="book-btn">Add Book</button>
            </form>
        </div>
    </div>